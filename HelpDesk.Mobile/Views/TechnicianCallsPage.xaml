<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelpDesk.Mobile.Views.TechnicianCallsPage"
             xmlns:vm="clr-namespace:HelpDesk.Mobile.ViewModels"
             xmlns:dto="clr-namespace:SuporteTI.Shared.Models.Dto;assembly=SuporteTI.Shared"
             Title="Fila de Chamados"
             BackgroundColor="#121212">

    <Grid RowDefinitions="Auto, *">
        <StackLayout Grid.Row="0" Padding="20" BackgroundColor="#1e1e1e">
            <Label Text="Fila de Atendimento" FontSize="20" FontAttributes="Bold" TextColor="White"/>
            <Label Text="Todos os chamados aguardando técnico" TextColor="Gray"/>
        </StackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding ChamadosAbertos}" Margin="10">
            <CollectionView.EmptyView>
                <Label Text="Nenhum chamado na fila." TextColor="Gray" HorizontalOptions="Center" VerticalOptions="Center"/>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dto:TicketListDto">
                    <Frame Margin="0,5" Padding="15" CornerRadius="10" BackgroundColor="#1e1e1e" BorderColor="Transparent">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Titulo}" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="{Binding NomeSolicitante}" TextColor="Gray" FontSize="12"/>
                                <Label Text="{Binding DataAbertura}" TextColor="Gray" FontSize="10"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="1" Text="Pegar" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TechnicianCallsViewModel}}, Path=PegarChamadoCommand}" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="#2563eb" TextColor="White" HeightRequest="35"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>