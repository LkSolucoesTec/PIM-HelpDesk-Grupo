<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelpDesk.Mobile.Views.TechnicianDashboardPage"
             xmlns:vm="clr-namespace:HelpDesk.Mobile.ViewModels"
             xmlns:dto="clr-namespace:SuporteTI.Shared.Models.Dto;assembly=SuporteTI.Shared"
             Title="Painel do Técnico"
             BackgroundColor="#121212">
    <!-- Fundo Escuro -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Painel do Técnico" FontSize="24" FontAttributes="Bold" TextColor="#2563eb" />

            <!-- CARD DE STATUS -->
            <Frame BackgroundColor="#1e1e1e" CornerRadius="10" HasShadow="True" Padding="15" BorderColor="Transparent">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Seu Status Atual" TextColor="Gray" />
                    <!-- Exibe o status atual com uma cor chamativa -->
                    <Label Text="{Binding TechnicianStatus}" FontSize="28" FontAttributes="Bold" TextColor="#10b981" HorizontalOptions="Center" />

                    <!-- Grid para os botões de status -->
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10" Margin="0,10,0,0">
                        <Button Grid.Row="0" Grid.Column="0" Text="Online" Command="{Binding MudarStatusCommand}" CommandParameter="Online" BackgroundColor="#10b981" TextColor="White" HeightRequest="40" CornerRadius="20"/>
                        <Button Grid.Row="0" Grid.Column="1" Text="Almoço" Command="{Binding MudarStatusCommand}" CommandParameter="Almoco" BackgroundColor="#ef4444" TextColor="White" HeightRequest="40" CornerRadius="20"/>
                        <Button Grid.Row="1" Grid.Column="0" Text="Pausa Café" Command="{Binding MudarStatusCommand}" CommandParameter="Cafe" BackgroundColor="#f59e0b" TextColor="White" HeightRequest="40" CornerRadius="20"/>
                        <Button Grid.Row="1" Grid.Column="1" Text="Offline" Command="{Binding MudarStatusCommand}" CommandParameter="Offline" BackgroundColor="#6b7280" TextColor="White" HeightRequest="40" CornerRadius="20"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- CARD DE FILA (Atalho) -->
            <Frame BackgroundColor="#1e1e1e" CornerRadius="10" HasShadow="True" Padding="15" BorderColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding IrParaFilaCommand}" />
                </Frame.GestureRecognizers>
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Fila de Chamados" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Toque para ver todos os chamados abertos" TextColor="Gray" FontSize="12"/>
                    </VerticalStackLayout>
                    <Label Grid.Column="1" Text=">" TextColor="Gray" FontSize="24" VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <!-- LISTA RÁPIDA (Preview) -->
            <Label Text="Chamados Pendentes" FontAttributes="Bold" TextColor="#2563eb" Margin="0,10,0,0"/>

            <!-- Usando CollectionView com altura fixa para preview -->
            <CollectionView ItemsSource="{Binding AvailableCalls}" HeightRequest="300">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="✅" FontSize="40" HorizontalOptions="Center"/>
                        <Label Text="Tudo limpo por aqui." TextColor="Gray" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:TicketListDto">
                        <Frame Margin="0,5" Padding="10" CornerRadius="10" BackgroundColor="#1e1e1e" BorderColor="Transparent">
                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding Titulo}" FontAttributes="Bold" TextColor="White" LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding NomeSolicitante}" TextColor="Gray" FontSize="12"/>
                                    <Label Text="{Binding Prioridade}" TextColor="#ef4444" FontSize="11" FontAttributes="Bold"/>
                                </VerticalStackLayout>

                                <Button Grid.Column="1" Text="Pegar" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TechnicianDashboardViewModel}}, Path=PegarChamadoCommand}" 
                                        CommandParameter="{Binding .}" 
                                        HeightRequest="35" FontSize="12" BackgroundColor="#2563eb" TextColor="White" CornerRadius="5"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- BOTÃO SAIR -->
            <Button Text="Sair da Conta" Command="{Binding LogoutCommand}" BackgroundColor="#ef4444" TextColor="White" CornerRadius="20" Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>