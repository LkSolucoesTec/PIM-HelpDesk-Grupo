<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelpDesk.Mobile.Views.NewCallPage"
             xmlns:vm="clr-namespace:HelpDesk.Mobile.ViewModels"
             Title="Novo Chamado"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Abrir Novo Ticket" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource PrimaryColor}" />

            <Frame CornerRadius="10" HasShadow="True" Padding="0" BorderColor="{StaticResource BorderColor}">
                <Entry Placeholder="Título do Problema" Margin="10" TextColor="{StaticResource TextColor}" />
            </Frame>

            <Frame CornerRadius="10" HasShadow="True" Padding="0" BorderColor="{StaticResource BorderColor}">
                <Editor Placeholder="Descreva o problema detalhadamente..." HeightRequest="150" Margin="10" TextColor="{StaticResource TextColor}" />
            </Frame>

            <Button Text="Enviar Chamado" 
                    BackgroundColor="{StaticResource PrimaryColor}" 
                    TextColor="Black" 
                    CornerRadius="20" 
                    HeightRequest="50" 
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>