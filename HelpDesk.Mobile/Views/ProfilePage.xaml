<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelpDesk.Mobile.Views.ProfilePage"
             xmlns:vm="clr-namespace:HelpDesk.Mobile.ViewModels"
             Title="Meu Perfil"
             BackgroundColor="{StaticResource BackgroundColor}">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

        <Image Source="user_avatar.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center">
            <Image.Clip>
                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
            </Image.Clip>
        </Image>

        <Label Text="Usuário Logado" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource TextColor}"/>

        <Button Text="Sair da Conta" 
                BackgroundColor="{StaticResource AttentionColor}" 
                TextColor="White" 
                CornerRadius="20" 
                WidthRequest="200" 
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>