@inherits LayoutComponentBase
@inject SuporteTI.Web.Services.AuthService AuthService
@inject NavigationManager Navigation
@using System.Timers

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => _drawerOpen = !_drawerOpen)" />

        <MudAvatar Color="Color.Inherit" Class="ml-3">
            <MudIcon Icon="@Icons.Material.Filled.Person" />
        </MudAvatar>

        <MudStack Spacing="0" Class="ml-3">
            <MudText Typo="Typo.h6">@_userName</MudText>
            <MudText Typo="Typo.caption">@_currentTime.ToString("dd/MM/yyyy HH:mm:ss")</MudText>
        </MudStack>

        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Edge="Edge.End" OnClick="Logout" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="pa-4">IA'sistente</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private string _userName = "Carregando...";
    private DateTime _currentTime = DateTime.Now;
    private Timer _timer;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (!AuthService.IsLoggedIn())
            {
                Navigation.NavigateTo("/login");
            }
            else
            {
                _userName = AuthService.UserName;

                _timer = new Timer(1000);
                _timer.Elapsed += (s, e) => InvokeAsync(() =>
                {
                    _currentTime = DateTime.Now;
                    StateHasChanged();
                });
                _timer.Start();
                await InvokeAsync(StateHasChanged);
            }
        }
    }

    private void Logout()
    {
        _timer?.Dispose();
        AuthService.Logout();
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}